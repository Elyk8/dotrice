#!/bin/sh

if [ -z "$1" ]; then
	op="$(fd . -HL -tf -d 1 | fzf)"
else
	op="$1"
fi

case "$op" in
	*.bmp | *.jpg | *.jpeg | *.png | *.xpm | *.webp | *.gif | *.tif | *.ico)
		rotdir "$op" | grep -i "\.\(png\|jpg\|jpeg\|gif\|webp\|tif\|ico\)\(_large\)*$" | nsxiv -aio 2>/dev/null
		;;
	*.wav | *.mp3 | *.flac | *.m4a | *.wma | *.ape | *.ac3 | *.og[agx] | *.spx | *.opus | *.as[fx] | *.mka)
		mpv --audio-display=no "$op"
		;;
	*.avi | *.mp4 | *.wmv | *.dat | *.3gp | *.ogv | *.mkv | *.mpg | *.mpeg | *.vob | *.fl[icv] | *.m2v | *.mov | *.webm | *.ts | *.mts | *.m4v | *.r[am] | *.qt | *.divx)
		mpv "$op" -quiet >/dev/null 2>&1
		;;
	*.odt | *.ods | *.odp | *.sxw | *.doc | *.docx | *.ppt | *.pptx | *.rtf)
		setsid -f libreoffice "$op" >/dev/null 2>&1
		;;
	*.xls | *.xlsx | *.csv)
		sc-im "$op"
		;;
	*.pdf | *.epub)
		$READER "$op" >/dev/null 2>&1
		;;
	*.tgz | *.tar.gz | *.tar.bz2 | *.tbz2 | *.tar.txz | *.txz | *.tar | *.zip | *.jar | *.war | *.ear | *.oxt | *.rar | *.7z)
		atool -l "$op" | less
		;;
	*.iso)
		iso-info --no-header -l "$op" | less
		;;
	*.svg)
		inkscape "$op" >/dev/null 2>&1
		;;
	"")
		exit 0
		;;
	*)
		$EDITOR "$op"
		;;
esac
