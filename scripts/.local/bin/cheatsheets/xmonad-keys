#!/bin/sh

sed -n '/myAdditionalKeys = \[/,/\]/p' ~/.config/xmonad/xmonad.hs |
	grep '^\s*("\|^\s*\-\- [A-Za-z]\|^$' |
	sed -e 's/^\s*//' \
		-e 's/\[ (/(/' |
	awk -F", " '! /^\s*\-\-/ {$1 = sprintf("%-20s", $1)} 1' |
	yad --text-info --back=#282c34 --fore=#bbc2cf --geometry=1200x800 --lang haskell --theme "Oblivion"
