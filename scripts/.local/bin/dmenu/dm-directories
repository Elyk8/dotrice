#!/bin/sh
. "$HOME/.config/rofi/configuration.sh"

if [ "$TERMINAL" = "alacritty" ]; then
	argument="alacritty --working-directory"
elif [ "$TERMINAL" = "st" ]; then
	argument="st -d"
fi

directory=$(rofi -dmenu -i -theme "$dir"/"$theme" <~/.fzf-marks  | cut -d' ' -f 3 | sort)

$argument "$directory"
