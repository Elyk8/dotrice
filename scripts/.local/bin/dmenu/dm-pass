#!/bin/sh

# Take password prompt from STDIN, print password to STDOUT
# the sed piece just removes the colon from the provided
# prompt: rofi -p already gives us a colon
rofi -dmenu \
	-password \
	-no-fixed-num-lines \
  -theme "${XDG_CONFIG_HOME:-$HOME/.config}/rofi/themes/pass" \
	-p "$(printf %s "$1" | sed s/://)"
