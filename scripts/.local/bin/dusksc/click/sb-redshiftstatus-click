    - ðŸŒ™ at night.
    - ðŸ’¡ during transition phase.
    - â˜€  when it is day time." ;;
    3) toggleredshift ;;
    # 4)  ;;
    # 5)  ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" $0 ;;
esac

$SETSTATUS 5 "$(sb-redshiftstatus)"
