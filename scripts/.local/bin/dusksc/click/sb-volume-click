#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.
SETSTATUS="duskc --ignore-reply run_command setstatus"

case $BLOCK_BUTTON in
	1) setsid -f pavucontrol ;;
	2) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	3) pamixer -t ;;
	4) pamixer -i 3 ;;
	5) pamixer -d 3 ;;
	10) setsid -f "$TERMINAL" -e "$EDITOR" $0 ;;
esac

$SETSTATUS 5 "$(sb-volume)"
