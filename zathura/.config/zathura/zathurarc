# Basic Settings

set dbus-service true
set synctex true
set sandbox none

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
set highlight-transparency .5
set zoom-center "true"
set render-loading "false"
map <Space> toggle_index
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top

# Startup options
set adjust-open width
set recolor true
set recolor-keephue             true      # keep original color

# theme
# Tokyonight {{{
# set default-bg                  "#1a1b26" # bg
# set default-fg                  "#BBC2CF" # fg
# set render-loading              true
# set render-loading-bg           "#1a1b26" # bg
# set render-loading-fg           "#BBC2CF" # fg

# # Recolor book content's color
# set recolor-lightcolor          "#1a1b26" # bg
# set recolor-darkcolor           "#BBC2CF" # fg
# }}}

# Doom-one {{{
