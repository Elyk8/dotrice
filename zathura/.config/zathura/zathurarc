# Darkplus {{{
set default-bg                  "#1E1E1E" # bg
set default-fg                  "#D8DEE9" # fg
set render-loading              true
set render-loading-bg           "#1E1E1E" # bg
set render-loading-fg           "#D8DEE9" # fg

# Recolor book content's color
set recolor-lightcolor          "#1E1E1E" # bg
set recolor-darkcolor           "#D8DEE9" # fg
# }}}
