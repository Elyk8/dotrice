  set scroll-page-aware "true"
  # set smooth-scroll "true"
  set scroll-full-overlap 0.01
  set scroll-step 100

  set dbus-service true
  set synctex true
  set sandbox none

  set statusbar-h-padding 0
  set statusbar-v-padding 0
  set page-padding 1
  set selection-clipboard clipboard
  set highlight-transparency .5
  set zoom-center "true"
  map <Space> toggle_index
  map D toggle_page_mode
  map r reload
  map R rotate
  map K zoom in
  map J zoom out
  map i recolor
  map p print
  map g goto top

  set adjust-open width
  set recolor true
  set recolor-keephue             true      # keep original color

  set default-bg                  "#1E1E1E" # bg
  set default-fg                  "#D8DEE9" # fg
  set render-loading              true
  set render-loading-bg           "#1E1E1E" # bg
  set render-loading-fg           "#D8DEE9" # fg

  # Recolor book content's color
  set recolor-lightcolor          "#1E1E1E" # bg
  set recolor-darkcolor           "#D8DEE9" # fg
