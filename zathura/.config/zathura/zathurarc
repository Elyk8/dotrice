# Basic Settings

set dbus-service true
set synctex true
set sandbox none

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
set highlight-transparency .5
set zoom-center "true"
set render-loading "false"
map <Space> toggle_index
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top

# Startup options
set adjust-open width
set recolor true

# theme
# VSCode
set notification-error-bg       "#1a1b26" # bg
set notification-error-fg       "#f7768e" # bright:red
set notification-warning-bg     "#1a1b26" # bg
set notification-warning-fg     "#ff9e64" # bright:yellow
set notification-bg             "#1a1b26" # bg
set notification-fg             "#b9f27c" # bright:green

set completion-bg               "#444b6a" # bg2
set completion-fg               "#A9B1D6" # fg
set completion-group-bg         "#32344a" # bg1
set completion-group-fg         "#787c99" # gray
set completion-highlight-bg     "#7da6ff" # bright:blue
set completion-highlight-fg     "#444b6a" # bg2

# Define the color in index mode
set index-bg                    "#444b6a" # bg2
set index-fg                    "#A9B1D6" # fg
set index-active-bg             "#7da6ff" # bright:blue
set index-active-fg             "#444b6a" # bg2

set inputbar-bg                 "#1a1b26" # bg
set inputbar-fg                 "#A9B1D6" # fg

set statusbar-bg                "#1a1b26" # bg2
set statusbar-fg                "#A9B1D6" # fg

set highlight-color             "#ff9e64" # bright:yellow
set highlight-active-color      "#ff7a93" # bright:orange

set default-bg                  "#1a1b26" # bg
set default-fg                  "#A9B1D6" # fg
set render-loading              true
set render-loading-bg           "#1a1b26" # bg
set render-loading-fg           "#A9B1D6" # fg

# Recolor book content's color
set recolor-lightcolor          "#1a1b26" # bg
set recolor-darkcolor           "#A9B1D6" # fg

set recolor                     "true"
set recolor-keephue             true      # keep original color
