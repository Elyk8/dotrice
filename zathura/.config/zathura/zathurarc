# Doom-one {{{
set notification-error-bg       "#282C34" # bg
set notification-error-fg       "#FF6C6B" # bright:red
set notification-warning-bg     "#282C34" # bg
set notification-warning-fg     "#ECBE7B" # bright:yellow
set notification-bg             "#282C34" # bg
set notification-fg             "#98BE65" # bright:green

set completion-bg               "#3F444A" # bg2
set completion-fg               "#BBC2CF" # fg
set completion-group-bg         "#3F444A" # bg1
set completion-group-fg         "#787c99" # gray
set completion-highlight-bg     "#46D9FF" # bright:blue
set completion-highlight-fg     "#BBC2CF" # bg2

# Define the color in index mode
set index-bg                    "#3F444A" # bg2
set index-fg                    "#BBC2CF" # fg
set index-active-bg             "#46D9FF" # bright:blue
set index-active-fg             "#3F444A" # bg2

set inputbar-bg                 "#282C34" # bg
set inputbar-fg                 "#BBC2CF" # fg

set statusbar-bg                "#282C34" # bg2
set statusbar-fg                "#BBC2CF" # fg

set highlight-color             "#ECBE7B" # bright:yellow
set highlight-active-color      "#FF6C6B" # bright:orange

set default-bg                  "#282C34" # bg
set default-fg                  "#BBC2CF" # fg
set render-loading              true
set render-loading-bg           "#282C34" # bg
set render-loading-fg           "#BBC2CF" # fg

# Recolor book content's color
set recolor-lightcolor          "#282C34" # bg
set recolor-darkcolor           "#BBC2CF" # fg
# }}}
