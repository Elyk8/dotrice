#!/bin/sh
run() {
    if ! pgrep "$1" > /dev/null ;
    then
        "$@"&
    fi
}

/usr/bin/prime-offload
multi-monitor
xrdb -merge ~/.config/x11/Xresources
run safeeyes -e &
run greenclip daemon &
run flameshot &
run remaps &
run clipmenud &
run xbanish &
run redshift &
run /usr/bin/emacs --daemon &
sleep 5 && run volctl &

autostart="dunst lxsession nm-applet picom mictray"
for program in $autostart; do
	pidof -s "$program" || setsid -f "$program"
done >/dev/null 2>&1

run "$HOME"/.fehbg &
