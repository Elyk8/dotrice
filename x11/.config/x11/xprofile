#!/bin/sh
run() {
    if ! pgrep "$1" > /dev/null ;
    then
        "$@"&
    fi
}

/usr/bin/prime-offload
multi-monitor
xrdb -merge ~/.config/x11/Xresources
run safeeyes -e &
run greenclip daemon &
run flameshot &
run feh --recursive --no-fehbg --bg-fill --randomize "${XDG_PICTURES_DIR:="$HOME/pix"}/wallpapers" &
run remaps &
run /usr/bin/emacs -nw --daemon &
run xbanish &
sleep 5 && run volctl &

autostart="shotkey dunst lxsession nm-applet picom redshift mictray"
for program in $autostart; do
	pidof -s "$program" || setsid -f "$program"
done >/dev/null 2>&1
